<Page x:Class="DetMir.Pages.PageEditNew"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DetMir.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="800"
      Title="PageEditNew">

    
    <Grid>
        <ScrollViewer>
            <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Артикул: "
                           Width="160" FontSize="17"/>
                <TextBox x:Name="articleTX" Width="180"
                         FontSize="17"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Наименование: "
                           Width="160" FontSize="17"/>
                <TextBox x:Name="titleTX" Width="180"
                         FontSize="17"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Единица измерения:  "
                           Width="160" FontSize="17"/>

                    <ComboBox x:Name="typeEdIzmCB" 
                          FontSize="17"
                          Style="{StaticResource mainCombo }">
                        <ComboBoxItem Content="уп." HorizontalAlignment="Left" />
                        <ComboBoxItem Content="шт." HorizontalAlignment="Left"/>
                    </ComboBox>

                </StackPanel>


            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Стоимость: "
                           Width="160" FontSize="17" TextWrapping="Wrap"/>
                <TextBox x:Name="StoimTX" Width="180"
                         FontSize="17"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Max скидка: "
                           Width="160" FontSize="17" TextWrapping="Wrap"/>
                <TextBox x:Name="MaxSkdTX" Width="180"
                         FontSize="17"/>
            </StackPanel>

         

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Производитель: "
                           Width="160" FontSize="17" TextWrapping="Wrap"/>
                <ComboBox x:Name="comboBox2" Style="{StaticResource mainCombo }"   ></ComboBox>
            </StackPanel>


            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Поставщик: "
                           Width="160" FontSize="17" TextWrapping="Wrap"/>
                <ComboBox x:Name="comboBox3" Style="{StaticResource mainCombo }"  ></ComboBox>

            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Описание: "
                           Width="160" FontSize="17"/>
                    <TextBox x:Name="descTX" Width="180" TextWrapping="Wrap"
                         FontSize="17"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    
                        <TextBlock Text="Изображение: "
                           Width="160" FontSize="17" TextWrapping="Wrap"/>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Name="StringImage" Visibility="Hidden" Text="{Binding photo, StringFormat=..//{0} }" />
                                    <Image  Source="{Binding Text, ElementName=StringImage}" Style="{StaticResource imgSource}"/>
                    </StackPanel>
                </StackPanel>
            <Button x:Name="saveAddBT"
                    Style="{StaticResource mainBtn}" Content="Сохранить" Click="saveAddBT_Click"/>
        </StackPanel>

            </ScrollViewer>


    </Grid>
</Page>
